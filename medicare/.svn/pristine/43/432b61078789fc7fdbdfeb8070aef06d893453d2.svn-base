<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
	<head>
		<title>客户端管理(page方式)</title>

		<c:set value="${pageContext.request.contextPath}" var="path" scope="page" />
		<link rel="stylesheet" href="${path}/css/bootstrap.min.css" />
		<link rel="stylesheet" href="${path}/css/bootstrap.css" />
		<link rel="stylesheet" href="${path}/css/bootstrap-theme.css" />
		<script src="${path}/easyui/jquery.js"></script>
		<script src="${path}/js/yiwei.js"></script>
		<script type="text/javascript">
			$(function() {
				datagrid2("customer", "getConditionCustomer");
			    
			    // 下拉菜单跳转
			    $('#typese1').combobox({
			    	onSelect: function(param){
			    		$('#customer').datagrid('options').queryParams = {}; // 清空datagrid查询参数
			    		  var flag = param.value;
			    		  var aurl;
			    		  if (flag == '--全部--') {
			    		      aurl = 'getConditionCustomer'
			    		  } else {
			    		      aurl = 'getConditionCustomer?cusFlag=' + flag
			    		  }
			    		  $('#customer').datagrid({
			    		      url: aurl
			    		  });
			    	}
			    });
			    
	//		    $('#typese1').change(function() {
	//		        $('#customer').datagrid('options').queryParams = {}; // 清空datagrid查询参数
	//		        var flag = $(this).val();
	//		        var aurl;
	//		        if (flag == '') {
	//		            aurl = 'getConditionCustomer'
	//		        } else {
	//		            aurl = 'getConditionCustomer?cusFlag=' + flag
	//		        }
	//		        $('#customer').datagrid({
	//		            url: aurl
	//		        });
	//		    });
			});
	
			// 数据检索
			function findUser() {
			    // 先取得 datagrid 的查询参数
			    var params = $('#customer').datagrid('options').queryParams;
			    var fields = $('#searchForm').serializeArray(); // 自动序列化表单元素为JSON对象
			    $.each(fields, function(i, field) {
			        params[field.name] = field.value; // 设置查询参数
			    });
			    $('#customer').datagrid('reload'); // 设置好查询参数 reload
			}
	
	
			//处理内容超长字段 add by fd 0516 现在加载方式不能通用有问题，待处理
			function fmtOverlen(value, row, index) {
			 return '<span title="'+value+'">'+value+'</span>';
			}
	
			// 根据值显示图片
			function fmtStatus(value, row, index) {
			    if (row.cusStatus == 1) { // 这里是判断哪些行
			        return '<a href="#"></a><img src="images/accept.png" title="正常"  alt="正常" />';
			    } else if (row.cusStatus == 2) {
			        return '<a href="#"></a><img src="images/accept.png" title="正常"  alt="正常" />';
			    } else if (row.cusStatus == -1) {
			        return '<a href="#"></a><img src="images/delete.png" title="已注销" alt="已注销" />';
			    } else {
			        return '<a href="#"></a><img src="images/warning.png" title="未处理" alt="未处理" />';
			    }
			}
	
			// 显示定点类型
			function fmtFlag(val , row, index){
				if(row.cusFlag==101){
					return '单体药店';
				}else if(row.cusFlag==102){
					return '连锁药店';
				}else if(row.cusFlag==201){
					return '门诊';
				}else if(row.cusFlag==301){
					return '医院';
				}
			}
	
			// 注销信息
			function cancel() {
			    var array = $('#customer').datagrid('getSelections'); // 获取删除选中项数组
			    var ids = ""; // 要删除的id字符串
			    for (var i = 0; i < array.length; i++) { // 组成一个字符串，ID主键之间用逗号隔开
			        if (i != array.length - 1) {
			            ids += array[i].cusId + ",";
			        } else {
			            ids += array[i].cusId;
			        }
			    }
			    if (array != "") {
			        $.messager.confirm('提示', '是否要注销选中信息?',
			        function(r) {
			            if (r) {
			                $.post("delCustomer", {
			                    ids: ids
			                    // 传向后台的参数,用,分隔
			                },
			                function() { // 前台没有返回json,里面就没有data
			                    $("#customer").datagrid('reload');
			                    $.messager.show({
			                        title: '系统提示',
			                        msg: "注销成功"
			                    });
			                });
			            }
			        });
			    }
			}
			// 通过信息
			function Pass() {
			    var array = $('#customer').datagrid('getSelections'); // 获取删除选中项数组
			    var ids = ""; // 要删除的id字符串
			    for (var i = 0; i < array.length; i++) { // 组成一个字符串，ID主键之间用逗号隔开
			        if (i != array.length - 1) {
			            ids += array[i].cusId + ",";
			        } else {
			            ids += array[i].cusId;
			        }
			    }
			    if (array != "") {
			        $.messager.confirm('提示', '是否要通过选中信息?',
			        function(r) {
			            if (r) {
			                $.post("updateStatusBatch", {
			                    ids: ids
			                    // 传向后台的参数,用,分隔
			                },
			                function() { // 前台没有返回json,里面就没有data
			                    $("#customer").datagrid('reload');
			                    $.messager.show({
			                        title: '系统提示',
			                        msg: "通过成功"
			                    });
			                });
			            }
			        });
			    }
	
			}
			// 点击清空按钮出发事件
			function clearForm() {
			    $('#searchForm').form('clear');
			}
	
			// 点击生成定点简码事件
			function getPcode(){
				$.get("getPcode",function(data){
					 $("#customer").datagrid('reload');
			         $.messager.show({
			             title: '系统提示',
			             msg: data.status
			         });
				});
				
			}
			// 打开修改医院编码
			function openupdateYybm() {
				var array = $('#customer').datagrid('getSelections');// 获取删除选中项数组
				if(array.length==0){
					$.messager.alert("提示","请选择一个定点!");
				}else if(array.length==1){
					$('#nfdbm').dialog('open').dialog('center').dialog('setTitle', '编辑医院编码');
					$('#form').form('clear'); // 清除表单数据
				}else{
					$.messager.alert("提示",'只能选择一个定点!');
					$('#customer').datagrid('clearSelections');
				}		
			}
			// 修改医院编码
			function updateYybm() {
				var yybm = $("#yybm").val();
				if(checkyybm(yybm)){
						var array = $('#customer').datagrid('getSelected');// 获取选中行
						var cusId=array.cusId;
						$.post("updateYybm",{cusId:cusId,yybm:yybm}, function(data) { 
							var status=data.status;
							 $.messager.show({
					                title: '系统提示',
					                msg: status
					            });	
							 $("#customer").datagrid('reload');
							 $('#nfdbm').dialog('close');
						});	
					}
			}
			// 校验验证医院编码
			function checkyybm(yybm) {
				if ($.trim(yybm) != ''){
					// 判断是否为整数 var ex = /^\d+$/; if (!ex.test(yybm))
					if (yybm < 0 || yybm != parseInt(yybm) || yybm.length != 6) {
						$.messager.show( {
							title : '系统提示',
							msg : "医院编码只能是六位正整数!"
						});
						return false;
					}
				}
				return true;
			}
		</script>
	</head>

	<body>
		<div class="container-fluid">
			<div class="row-fluid">
				<div class="span12">
					<h3 align="center">
						注册用户管理
					</h3>
				</div>
				<div class="span12">
					<table class="table table-bordered">
						<thead>
							<tr>
								<th>客户标识</th>
								<th>客户名称</th>
								<th>分店编码</th>
								<th>联系地址</th>
								<th>联系人</th>
								<th>联系电话</th>
								<th>cusId</th>
								<th>注册日期</th>
								<th>医院编码</th>
								<th>状态</th>
								<th>备注</th>
								<th>删除</th>
								<%--<th>
									修改
								</th>
							--%>
							</tr>
						</thead>
						<tbody>
							<c:if test="${!empty page.list}">
								<c:forEach items="${page.list}" var="c">

									<tr class="info">
										<%--<td>
											${c.cusParentid }
										</td>
										--%>
										<td>${c.cusFlag }</td>
										<td>${c.cusName }</td>
										<td>${c.cusBranchcode }</td>
										<td>${c.cusAddr }</td>
										<td>${c.cusContact }</td>
										<td>${c.cusPhone }</td>
										<td>${c.cusId }</td>
										<td>${c.cusRegdate }</td>
										<td>${c.cusDareway }</td>
										<td>
											<!-- '状态 0待审 1通过 2未通过  9已删除' -->
											<c:if test="${c.cusStatus=='0' }">
												<input type="checkbox" value="0" id="${c.cusId }" onclick="changeCusStatus(this,'${c.cusId }')" checked="checked" />待审核<br />
												<input type="checkbox" value="1" id="${c.cusId }" onclick="changeCusStatus(this,'${c.cusId }')" />审核已通过<br />
												<input type="checkbox" value="2" id="${c.cusId }" onclick="changeCusStatus(this,'${c.cusId }')" />审核未通过<br />
												<input type="checkbox" value="9" id="${c.cusId }" onclick="changeCusStatus(this,'${c.cusId }')" />已删除<br />
											</c:if>
											<c:if test="${c.cusStatus=='1' }">
												<input type="checkbox" value="0" id="${c.cusId }" onclick="changeCusStatus(this,'${c.cusId }')" />待审核<br />
												<input type="checkbox" value="1" id="${c.cusId }" onclick="changeCusStatus(this,'${c.cusId }')" checked="checked" />审核已通过<br />
												<input type="checkbox" value="2" id="${c.cusId }" onclick="changeCusStatus(this,'${c.cusId }')" />审核未通过<br />
												<input type="checkbox" value="9" id="${c.cusId }" onclick="changeCusStatus(this,'${c.cusId }')" />已删除<br />
											</c:if>
											<c:if test="${c.cusStatus=='2' }">
												<input type="checkbox" value="0" id="${c.cusId }" onclick="changeCusStatus(this,'${c.cusId }')" />待审核<br />
												<input type="checkbox" value="1" id="${c.cusId }" onclick="changeCusStatus(this,'${c.cusId }')" />审核已通过<br />
												<input type="checkbox" value="2" id="${c.cusId }" onclick="changeCusStatus(this,'${c.cusId }')" checked="checked" />审核未通过<br />
												<input type="checkbox" value="9" id="${c.cusId }" onclick="changeCusStatus(this,'${c.cusId }')" />已删除<br />
											</c:if>
											<c:if test="${c.cusStatus=='9' }">
												<input type="checkbox" value="0" id="${c.cusId }" onclick="changeCusStatus(this,'${c.cusId }')" />待审核<br />
												<input type="checkbox" value="1" id="${c.cusId }" onclick="changeCusStatus(this,'${c.cusId }')" />审核已通过<br />
												<input type="checkbox" value="2" id="${c.cusId }" onclick="changeCusStatus(this,'${c.cusId }')" />审核未通过<br />
												<input type="checkbox" value="9" id="${c.cusId }" onclick="changeCusStatus(this,'${c.cusId }')" checked="checked" />已删除<br />
											</c:if>
										</td>
										<td>
											${c.cusRemark }
										</td>

										<td>
											<c:choose>
												<c:when test="${c.cusStatus==1}">
													<button type="button" class="btn btn-primary btn-sm" disabled="disabled">删除</button>
												</c:when>
												<c:otherwise>
													<button type="button" class="btn btn-primary btn-sm" id="<c:out value="${c.cusId}" />" value="<c:out value="${c.cusId}" />" onclick=deleteItem(this.value);>删除</button>
												</c:otherwise>
											</c:choose>
										</td>
										<%--<td>
											<a
												href="<%=request.getContextPath()%>/getCustomer?cudId=${c.cusId}">修改</a>
										</td>
									--%>
									</tr>

								</c:forEach>
							</c:if>
						</tbody>
					</table>
					<div class="row-fluid">
						<div class="span12">
							<%@include file="/WEB-INF/jsp/system/page.jsp"%>
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
