<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
	<head>
		<title>客户管理</title>
		<c:set value="${pageContext.request.contextPath}" var="path"
			scope="page" />
		<link rel="stylesheet" href="${path}/easyui/themes/default/easyui.css" />
		<link rel="stylesheet" href="${path}/easyui/themes/icon.css" />
		<link rel="stylesheet" type="text/css" href="${path}/css/mystyle.css" />
		<script src="${path}/easyui/jquery-1.7.2.min.js"></script>
		<script src="${path}/easyui/jquery.easyui.min.js"></script>
		<script src="${path}/easyui/locale/easyui-lang-zh_CN.js"></script>
		<script src="${path}/js/customer/customer.js"></script>
	</head>
	<body>
		<div class="easyui-layout" data-options="fit:'true',">
			<div class="xqgl">
				<div class="easyui-panel" title="定点信息"
					data-options="border:true,fit:true" iconCls="icon-zc">
					<table id="customer"
						data-options="checkOnSelect:true,fit:true,rownumbers:true,pagination:true"
						width="95%" cellpadding="2" cellspacing="1"
						toolbar="#cusmytoolbar1">
						<thead>
							<tr>
								<th data-options="field:'sb',checkbox:true"></th>
								<th field="cusId" hidden=true align="center">
									<!-- hidden=true 隐藏列 -->
									客户ID
								</th>
								<th field="cusParentid" hidden=true align="center"
									editor="{type:'text'}">
									客户上级ID
								</th>
								<th field="cusBranchcode" hidden=true align="center"
									editor="{type:'text'}">
									分店编码
								</th>
								<th field="cusRegip" hidden=true align="center"
									editor="{type:'text'}">
									注册ip
								</th>
								<th field="cusUniqure" hidden=true align="center"
									editor="{type:'text'}">
									唯一标识
								</th>
								<th data-options="field:'cusName',align:'left',width:280">
									单位名称
								</th>
								<th data-options="field:'cusPcode',align:'left',width:150, hidden:true">
									简码
								</th>
								<th data-options="field:'cusAddr',align:'left',width:280,formatter:fmtOverlen">
									联系地址
								</th>
								<th data-options="field:'cusDareway',align:'center',width:80">
									医院编码
								</th>
								<th data-options="field:'cusContact',align:'center',width:80">
									联系人
								</th>
								<th data-options="field:'cusPhone',align:'center',width:100">
									联系电话
								</th>									
								<th data-options="field:'cusRegdate',align:'center',width:80"
									editor="{type:'datetimebox'}">
									注册日期
								</th>
								<th	data-options="field:'cusFlag',align:'center',width:80,formatter:fmtFlag">
									单位类型
								</th>
								<th
									data-options="field:'cusStatus',align:'center',width:60,formatter:fmtStatus">
									状态
								</th>
									
							</tr>
						</thead>
						<tbody>

						</tbody>
					</table>
				</div>
				<div id="cusmytoolbar1"
					style="width: 200%; height: 25px; padding: 2px 0;" class="">
					<div class="barbox1">
					    <div style="float:left;margin:0 2px">
						<select id="typese1" class="easyui-combobox" style="text-align: center" data-options="width:100,panelHeight:'auto'" >
							<option value="--全部--" selected>--全部--</option>
							<option value="101">单体药店</option>
							<option value="102">连锁药店</option>
							<option value="201">门诊社区</option>
							<option value="301">医院</option>
						</select>
						</div>
						<div style="width:120px; line-height: 22px;display:inline">
							<form id="searchForm"
								onkeydown="if(event.keyCode==13){ queryForm();}">
								<input id="searchname" name="cusName"
									class="easyui-searchbox input" AUTOCOMPLETE="off"
									data-options="width:180,searcher:findUser,prompt:'请输入查询条件',"></input>
							</form>
							<div class="cl-xx">
								<a href="javascript:" class="clear" onClick="clearForm()"> <img
										style="margin-top: 2px;" class="cl-xx-child"
										src="images/xx.png" /> </a>
							</div>
						</div>
					</div>
					<div align="right" class="barbox-btn"><%--
						<a href="#" class="easyui-linkbutton" onClick="getPcode()"
							iconCls="icon-ok" style="padding: 0 10px; margin: 0 2px 0 0;">生成简码</a>
						--%>
						<a href="#" class="easyui-linkbutton" onClick="openupdateYybm()"
							iconCls="icon-edit" style="padding: 0 10px; margin: 0 2px;">编辑</a>
							<%@include file="updateYybm.jsp"%>
						<a href="#" class="easyui-linkbutton" onClick="Pass()"
							iconCls="icon-ok" style="padding: 0 10px; margin: 0 2px 0 0;">通过</a>
						<a href="#" class="easyui-linkbutton" onClick="cancel()"
							iconCls="icon-cancel" style="padding: 0 10px; margin: 0 2px;">注销</a>
					</div>
				</div>
	</body>
</html>
