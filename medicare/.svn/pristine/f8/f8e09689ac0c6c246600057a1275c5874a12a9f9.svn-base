				});
			}

			function tzOperate(val, row, index) {
				if(val=='0'){
					return '停止定点资格';
				}
				else if(val=='1'){
					return '开启定点资格';
				}
				
			}
			function tzStatus(val, row, index) {
				if(val=='0'){
					return '成功';
				}
				else if(val=='1'){
					return '失败';
				}else  if(val=='2'){
					return '错误';
				}
			}
			function tzScan(val, row, index) {
				if(val=='0'){
					return '是';
				}
				else if(val=='1'){
					return '否';
				}else  if(val=='2'){
					return '错误';
				}
			}
			function tzYbcx(val, row, index) {
				if(val=='0'){
					return '是';
				}
				else if(val=='1'){
					return '否';
				}else  {
					return '未知';
				}
