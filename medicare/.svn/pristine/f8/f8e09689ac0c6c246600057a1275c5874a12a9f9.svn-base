			// 添加tzddlog名单
			function addTzddlog() {
				var yybms = $("input[name='yybms']").val();
				$.post("addTzddlog", {
					yybms : yybms
				}, function(data) {//前台没有返回json,里面就没有data
						$('#tzddlog').datagrid( {
							url : 'getSearchTzddlog'
						});
						$("#addTzddlog").find("input").val("");
						$.messager.alert("系统提示",data.status);
					});
			}
	
			// 对应停止定点列表，打描注册定点添加到停止列表
